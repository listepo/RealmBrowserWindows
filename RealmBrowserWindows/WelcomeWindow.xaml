<Window x:Class="RealmBrowserWindows.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealmBrowserWindows"
        mc:Ignorable="d"
        ResizeMode="NoResize" Height="350" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="151*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Welcome to Realm Browser" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="16"/>
        <Label Content="0.0.0.0" Name="AssemblyVersion" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" FontSize="12"/>
        <Button Grid.ColumnSpan="2" Content="Open Realm file" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0" Padding="5,2,5,2" Click="OpenRealmFile_Click"/>
        <Button Grid.ColumnSpan="2" Content="Open Realm url" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0" Padding="5,2,5,2" IsEnabled="False"/>
        <Button Grid.ColumnSpan="2" Content="Connect to Object Server" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,200,0,0" Padding="5,2,5,2" IsEnabled="False"/>
    </Grid>
</Window>
